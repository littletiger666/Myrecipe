<% @recipe.each_slice(3) do |recipes| %>
  <row>
    <% recipes.each do |recipe| %>
      <div class="col-md-4">
        <div class="recipe">
          <div class="image_wrapper">
            <%= link_to recipe do %>
              <%= image_tag recipe.image.url(:medium), class: "recipe_image" %>
            <% end %>
            <h2><%= link_to recipe.title, recipe %></h2>
          </div>
        </div>
      </div>
    <% end %>
  </row>
<% end %>
